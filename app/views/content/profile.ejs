<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Edit Profile</h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= user._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Display Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Display Name"
                    name="displayName" 
                    value="<%= user.displayName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">User Name</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Question"
                    name="username" 
                    value="<%= user.username %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Email Address"
                    name="emailAddress" 
                    value="<%= user.emailAddress %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>